<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:chd.Rizitelli.App"
             x:Class="chd.Rizitelli.App.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="CHDFontColor">#CCCCDC</Color>
            <Color x:Key="CHDBlack">#000000</Color>
            <Color x:Key="CHDWhite">#FFFFFF</Color>
            <Color x:Key="PageBackgroundColor">#181B1F</Color>
            <Color x:Key="CHDBg">#181B1F</Color>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{DynamicResource CHDFontColor}" />
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="{DynamicResource CHDFontColor}" />
                <Setter Property="FontFamily" Value="OpenSansRegular" />
                <Setter Property="BackgroundColor" Value="#181B1F" />
                <Setter Property="Padding" Value="14,10" />
            </Style>

            <Style TargetType="NavigationPage" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>
            <!--
            For information about styling .NET MAUI pages
            please refer to the documentation:
            https://go.microsoft.com/fwlink/?linkid=2282329
        -->

        </ResourceDictionary>
    </Application.Resources>
</Application>
